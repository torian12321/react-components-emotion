{
  "compilerOptions": {
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "lib": ["es6", "es7", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "rootDirs": ["src", "stories"],
    "sourceMap": true,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "acceptance-tests",
    "build",
    "config",
    "coverage",
    "dist",
    "jest",
    "node_modules",
    "public",
    "scripts",
    "src/setupTests.ts",
    "webpack",
    "__mocks__"
  ],
  "include": ["src"]
}
